{
    "manifest_version": 3,
    "name": "Zoho CRM Enhancer",
    "version": "1.0",
    "description": "Useful UI and UX improvements for Zoho CRM.",

    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },

    "content_scripts": [
        {
            "js": [
                "scripts/functions-editor/functions-editor.js"
            ],
            "css": [
                "scripts/functions-editor/functions-editor.css",
                "webfonts/jetbrains-mono.css"
            ],
            "matches": [
                "https://crm.zoho.com/crm/*/settings/functions/myFunctions",
                "https://crm.zoho.eu/crm/*/settings/functions/myFunctions"
            ]
        }
    ]
}

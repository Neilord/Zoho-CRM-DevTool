{
  "manifest_version": 3,
  "name": "Zoho CRM Enhancer",
  "version": "1.0",
  "description": "Useful UI and UX improvements for Zoho CRM.",

  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },

  "permissions": [
    "storage"
  ],
  
  "action": {
    "default_title": "Zoho CRM Enhancer",
    "default_popup": "scripts/popup/popup.html"
  },

  "content_scripts": [
    {
      "js": ["scripts/functions-editor/functions-editor.js"],
      "css": ["scripts/variables.css"],
      "matches": [
        "https://crm.zoho.com/*",
        "https://crm.zoho.au/*",
        "https://crm.zoho.eu/*",
        "https://crm.zoho.com.au/*",
        "https://crm.zoho.com.cn/*",
        "https://crm.zoho.jp/*",
        "https://crm.zoho.in/*"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "scripts/functions-editor/functions-editor.css",
        "scripts/functions-editor/code-formatter.js",
        "scripts/functions-editor/close-button-action.js",
        "fonts/JetBrainsMono-Bold.woff2",
        "fonts/JetBrainsMono-BoldItalic.woff2",
        "fonts/JetBrainsMono-ExtraBold.woff2",
        "fonts/JetBrainsMono-ExtraBoldItalic.woff2",
        "fonts/JetBrainsMono-ExtraLight.woff2",
        "fonts/JetBrainsMono-ExtraLightItalic.woff2",
        "fonts/JetBrainsMono-Italic.woff2",
        "fonts/JetBrainsMono-Light.woff2",
        "fonts/JetBrainsMono-LightItalic.woff2",
        "fonts/JetBrainsMono-Medium.woff2",
        "fonts/JetBrainsMono-MediumItalic.woff2",
        "fonts/JetBrainsMono-Regular.woff2",
        "fonts/JetBrainsMono-SemiBold.woff2",
        "fonts/JetBrainsMono-SemiBoldItalic.woff2",
        "fonts/JetBrainsMono-Thin.woff2",
        "fonts/JetBrainsMono-ThinItalic.woff2"
      ],
      "matches": [
        "https://crm.zoho.com/*",
        "https://crm.zoho.au/*",
        "https://crm.zoho.eu/*",
        "https://crm.zoho.com.au/*",
        "https://crm.zoho.com.cn/*",
        "https://crm.zoho.jp/*",
        "https://crm.zoho.in/*"
      ]
    }
  ]
}
